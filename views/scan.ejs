<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Attendance - Live Scanner</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@500&display=swap" rel="stylesheet">
    <style>
        body {
            background: #020617;
            color: white;
            min-height: 100vh;
            overflow-x: hidden;
        }

        .scanner-container {
            padding: 30px;
        }

        .video-wrapper {
            position: relative;
            width: 100%;
            border-radius: 24px;
            overflow: hidden;
            border: 2px solid rgba(255, 255, 255, 0.05);
            box-shadow: 0 0 50px rgba(0, 0, 0, 0.5);
            background: #000;
        }

        #webcam {
            width: 100%;
            height: auto;
        }

        #overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }

        .log-panel {
            background: rgba(15, 23, 42, 0.8);
            backdrop-filter: blur(10px);
            border-left: 1px solid rgba(255, 255, 255, 0.1);
            height: 100vh;
            overflow-y: auto;
            padding: 25px;
        }

        .log-item {
            background: rgba(255, 255, 255, 0.03);
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 12px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            animation: slideIn 0.3s ease-out;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(20px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .status-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            display: inline-block;
            background: #eab308;
        }

        .status-active .status-dot {
            background: #22c55e;
            box-shadow: 0 0 10px #22c55e;
        }

        .student-name {
            font-family: 'JetBrains Mono', monospace;
            font-size: 0.9rem;
        }
    </style>
</head>

<body>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Left: Video Feed -->
            <div class="col-lg-8 scanner-container d-flex flex-column">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-bold m-0 d-flex align-items-center gap-2">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#3b82f6" stroke-width="2">
                            <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z">
                            </path>
                            <circle cx="12" cy="13" r="4"></circle>
                        </svg>
                        LIVE SCANNER
                    </h3>
                    <div id="sysStatus" class="small fw-bold opacity-75">
                        <span class="status-dot me-1"></span> INITIALIZING AI...
                    </div>
                </div>

                <div class="video-wrapper">
                    <video id="webcam" autoplay muted playsinline></video>
                    <canvas id="overlay"></canvas>
                </div>

                <div
                    class="mt-4 p-3 bg-primary bg-opacity-10 rounded-3 border border-primary border-opacity-25 text-center">
                    <p class="mb-0 small text-primary-emphasis fw-bold">PRO TIP: ENSURE GOOD LIGHTING FOR 99.9% ACCURACY
                    </p>
                </div>

                <div class="mt-auto d-flex gap-3">
                    <a href="/" class="btn btn-outline-secondary w-100 py-3 fw-bold">DASHBOARD</a>
                </div>
            </div>

            <!-- Right: Activity Logs -->
            <div class="col-lg-4">
                <div class="log-panel">
                    <h5 class="fw-bold mb-4 opacity-50">RECENT ACTIVITY</h5>
                    <div id="scanLog">
                        <!-- Activity loaded here -->
                        <p class="text-center text-muted py-5" id="noActivity">System is waiting for faces...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/face-api.js@0.22.2/dist/face-api.min.js"></script>
    <script>
        const video = document.getElementById('webcam');
        const overlay = document.getElementById('overlay');
        const sysStatus = document.getElementById('sysStatus');
        const scanLog = document.getElementById('scanLog');
        const noActivity = document.getElementById('noActivity');

        let faceMatcher = null;
        let markedToday = new Set();
        let isReady = false;

        async function init() {
            try {
                const MODEL_URL = 'https://cdn.jsdelivr.net/gh/justadudewhohacks/face-api.js@master/weights';
                await Promise.all([
                    faceapi.nets.tinyFaceDetector.loadFromUri(MODEL_URL),
                    faceapi.nets.faceLandmark68Net.loadFromUri(MODEL_URL),
                    faceapi.nets.faceRecognitionNet.loadFromUri(MODEL_URL)
                ]);

                sysStatus.innerHTML = '<span class="status-dot me-1"></span> LOADING PROFILES...';

                const res = await fetch('/api/face/descriptors');
                const result = await res.json();

                if (result.data.length > 0) {
                    const labeled = result.data.map(s => {
                        return new faceapi.LabeledFaceDescriptors(s._id + '|' + s.name, [new Float32Array(s.faceDescriptor)]);
                    });
                    faceMatcher = new faceapi.FaceMatcher(labeled, 0.6);
                }

                startWebcam();
            } catch (e) {
                console.error("AI Init Error:", e);
                sysStatus.innerHTML = '<span class="text-danger">ERROR INITIALIZING AI</span>';
            }
        }

        function startWebcam() {
            navigator.mediaDevices.getUserMedia({ video: true })
                .then(stream => {
                    video.srcObject = stream;
                    sysStatus.classList.add('status-active');
                    sysStatus.innerHTML = '<span class="status-dot me-1"></span> SCANNING ACTIVE';
                    isReady = true;
                });
        }

        video.addEventListener('play', () => {
            const displaySize = { width: video.clientWidth, height: video.clientHeight };
            faceapi.matchDimensions(overlay, displaySize);

            // Sequential detection loop to prevent CPU overhead
            async function detectionLoop() {
                if (!isReady || !faceMatcher || video.paused || video.ended) {
                    requestAnimationFrame(detectionLoop);
                    return;
                }

                try {
                    // Use TinyFaceDetector for 3x-4x speed boost
                    const detections = await faceapi.detectAllFaces(video, new faceapi.TinyFaceDetectorOptions())
                        .withFaceLandmarks()
                        .withFaceDescriptors();

                    const resized = faceapi.resizeResults(detections, displaySize);
                    const ctx = overlay.getContext('2d');
                    ctx.clearRect(0, 0, overlay.width, overlay.height);

                    const results = resized.map(d => faceMatcher.findBestMatch(d.descriptor));

                    results.forEach((match, i) => {
                        const box = resized[i].detection.box;
                        const drawBox = new faceapi.draw.DrawBox(box, { label: match.toString() });
                        drawBox.draw(overlay);

                        if (match.label !== 'unknown') {
                            const [id, name] = match.label.split('|');
                            processAttendance(id, name);
                        }
                    });
                } catch (err) {
                    console.error("Detection Error:", err);
                }

                // Wait 500ms before next detection to save CPU
                setTimeout(detectionLoop, 500);
            }

            detectionLoop();
        });

        async function processAttendance(id, name) {
            if (markedToday.has(id)) return;
            markedToday.add(id);

            if (noActivity) noActivity.remove();

            const time = new Date().toLocaleTimeString();
            const log = document.createElement('div');
            log.className = 'log-item';
            log.innerHTML = `
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="student-name text-white fw-bold">${name}</div>
                        <div class="small text-success fw-bold mt-1">MARKED PRESENT</div>
                    </div>
                    <div class="text-muted small">${time}</div>
                </div>
            `;
            scanLog.prepend(log);

            try {
                await fetch('/api/attendance', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ studentId: id })
                });

                // Audio or Visual Feedback
                document.body.style.backgroundColor = "#064e3b";
                setTimeout(() => document.body.style.backgroundColor = "#020617", 400);

            } catch (err) {
                console.error(err);
                markedToday.delete(id);
            }
        }

        init();
    </script>
</body>

</html>