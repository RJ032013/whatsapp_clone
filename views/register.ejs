<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Attendance - Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #0f172a;
            color: white;
            min-height: 100vh;
            padding: 40px 0;
        }

        .glass-card {
            background: rgba(30, 41, 59, 0.7);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);
        }

        .video-box {
            position: relative;
            width: 100%;
            max-width: 640px;
            aspect-ratio: 4/3;
            background: #000;
            border-radius: 12px;
            overflow: hidden;
            margin: 0 auto;
        }

        #webcam {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        #overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        .btn-success {
            background: #10b981;
            border: none;
            padding: 12px;
            font-weight: 700;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold mb-0">STUDENT REGISTRATION</h2>
            <a href="/" class="btn btn-outline-light btn-sm px-4">BACK</a>
        </div>

        <div class="row g-4">
            <!-- Add New Student Form -->
            <div class="col-md-4">
                <div class="glass-card h-100">
                    <h5 class="fw-bold mb-4">Add To Database</h5>
                    <form id="addStudentForm">
                        <div class="mb-3">
                            <label class="form-label small text-muted">FULL NAME</label>
                            <input type="text" id="newName" class="form-control bg-dark text-white border-secondary"
                                placeholder="e.g. John Doe" required>
                        </div>
                        <div class="mb-4">
                            <label class="form-label small text-muted">CATEGORY / CLASS</label>
                            <input type="text" id="newCategory" class="form-control bg-dark text-white border-secondary"
                                placeholder="e.g. Grade 10" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 fw-bold">CREATE PROFILE</button>
                    </form>
                    <hr class="my-4 opacity-10">
                    <h5 class="fw-bold mb-3">Existing Students</h5>
                    <select id="studentSelect" class="form-select bg-dark text-white border-secondary mb-3">
                        <option value="">-- Choose Student to Scan --</option>
                        <% students.forEach(s=> { %>
                            <option value="<%= s._id %>">
                                <%= s.name %> (<%= s.category %>) <%= s.faceDescriptor.length> 0 ? '✅' : '❌' %>
                            </option>
                            <% }) %>
                    </select>
                    <button id="registerBtn" class="btn btn-success w-100 fw-bold disabled">CAPTURE & SAVE FACE</button>
                    <div id="status" class="mt-3 text-center small fw-bold"></div>
                </div>
            </div>

            <!-- Webcam View -->
            <div class="col-md-8">
                <div class="glass-card text-center">
                    <div id="loadingAI" class="mb-3">
                        <span class="spinner-border spinner-border-sm me-2"></span> Initializing Neural Networks...
                    </div>
                    <div class="video-box" id="cameraArea" style="display:none;">
                        <video id="webcam" autoplay muted playsinline></video>
                        <canvas id="overlay"></canvas>
                    </div>
                    <p class="text-muted mt-3 small">Look directly at the camera. Ensure face is inside the box.</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/face-api.js@0.22.2/dist/face-api.min.js"></script>
    <script>
        const video = document.getElementById('webcam');
        const overlay = document.getElementById('overlay');
        const registerBtn = document.getElementById('registerBtn');
        const studentSelect = document.getElementById('studentSelect');
        const status = document.getElementById('status');

        let currentDescriptor = null;

        // 1. Initial Models
        async function loadModels() {
            const MODEL_URL = 'https://cdn.jsdelivr.net/gh/justadudewhohacks/face-api.js@master/weights';
            try {
                await Promise.all([
                    faceapi.nets.tinyFaceDetector.loadFromUri(MODEL_URL),
                    faceapi.nets.faceLandmark68Net.loadFromUri(MODEL_URL),
                    faceapi.nets.faceRecognitionNet.loadFromUri(MODEL_URL)
                ]);
                document.getElementById('loadingAI').style.display = 'none';
                document.getElementById('cameraArea').style.display = 'block';
                startWebcam();
            } catch (err) {
                console.error("Model Load Error:", err);
                document.getElementById('loadingAI').innerHTML = '<span class="text-danger">AI Models Failed to Load</span>';
            }
        }

        function startWebcam() {
            navigator.mediaDevices.getUserMedia({ video: true })
                .then(stream => video.srcObject = stream)
                .catch(err => alert("Camera Error: Provide permissions and use HTTPS/Localhost"));
        }

        // 2. Detection Loop
        video.addEventListener('play', () => {
            const displaySize = { width: video.clientWidth, height: video.clientHeight };
            faceapi.matchDimensions(overlay, displaySize);

            async function detectionLoop() {
                if (video.paused || video.ended) {
                    requestAnimationFrame(detectionLoop);
                    return;
                }

                try {
                    const detection = await faceapi.detectSingleFace(video, new faceapi.TinyFaceDetectorOptions()).withFaceLandmarks().withFaceDescriptor();
                    const ctx = overlay.getContext('2d');
                    ctx.clearRect(0, 0, overlay.width, overlay.height);

                    if (detection) {
                        const resized = faceapi.resizeResults(detection, displaySize);
                        faceapi.draw.drawDetections(overlay, resized);
                        currentDescriptor = Array.from(detection.descriptor);
                        if (studentSelect.value) registerBtn.classList.remove('disabled');
                    } else {
                        currentDescriptor = null;
                        registerBtn.classList.add('disabled');
                    }
                } catch (err) {
                    console.error("Registration Detection Error:", err);
                }

                // Wait 500ms for next detection
                setTimeout(detectionLoop, 500);
            }

            detectionLoop();
        });

        // 3. API Actions
        document.getElementById('addStudentForm').onsubmit = async (e) => {
            e.preventDefault();
            const res = await fetch('/api/students', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ name: document.getElementById('newName').value, category: document.getElementById('newCategory').value })
            });
            if (res.ok) location.reload();
        };

        registerBtn.onclick = async () => {
            if (!studentSelect.value || !currentDescriptor) return;
            registerBtn.innerText = "SAVING...";
            registerBtn.classList.add('disabled');

            const res = await fetch('/api/face/register', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ studentId: studentSelect.value, descriptor: currentDescriptor })
            });

            if (res.ok) {
                status.className = "mt-3 text-center small fw-bold text-success";
                status.innerText = "SUCCESS: FACE REGISTERED!";
                setTimeout(() => location.reload(), 2000);
            } else {
                status.className = "mt-3 text-center small fw-bold text-danger";
                status.innerText = "ERROR SAVING DATA";
            }
        };

        loadModels();
    </script>
</body>

</html>